<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remind_notification_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:paddingBottom="10dp"
    android:background="@drawable/dialog_radius_white_shape"
    >

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:text="这里可以放title"
        android:textColor="@color/color_414141"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iconBg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/titleTv"
        android:layout_alignStart="@+id/titleTv"
        android:layout_marginTop="14dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iconBg"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/iconBg"
        android:text="这里可以放很多内容"
        android:textColor="@color/color_070021" />

    <TextView
        android:id="@+id/goBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_push_button"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:text="确定"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>