<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification.NotificationBasicActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_notification_show_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个普通通知"/>


    <Button
        android:id="@+id/btn_notification_show_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个下载进度通知"/>


    <Button
        android:id="@+id/btn_notification_show_big_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个BigText通知"/>


    <Button
        android:id="@+id/btn_notification_show_big_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个BigPicture通知"/>


    <Button
        android:id="@+id/btn_notification_show_in_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个InBox的通知"/>


    <Button
        android:id="@+id/btn_notification_show_hang_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个悬挂通知(FullScreenIntent为一个activity)" />


    <Button
        android:id="@+id/btn_notification_show_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示自定义布局通知(没有FullScreenIntent)" />


    <Button
        android:id="@+id/btn_notification_show_no_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示不消失通知(FullScreenIntent为一个空intent)" />

    <Button
        android:id="@+id/btn_notification_show_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示activity通知" />

</LinearLayout>