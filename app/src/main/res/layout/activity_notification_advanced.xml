<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification.NotificationAdvancedActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_notification_show_big_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个大通知(setContent)" />


    <Button
        android:id="@+id/btn_notification_show_big_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个大通知(setCustomView)" />


    <Button
        android:id="@+id/btn_notification_show_big_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个大通知(setBitCustomView)" />

    <Button
        android:id="@+id/btn_notification_show_big_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个大通知(前面三个都set)" />

    <Button
        android:id="@+id/btn_notification_show_big_layout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个大通知(三种布局)" />


    <Button
        android:id="@+id/btn_notification_show_big_notification_in_all_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="在所有版本展示一个大通知" />

</LinearLayout>