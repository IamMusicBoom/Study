<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification.NotificationAdvancedActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_notification_show_hang_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示一个悬挂通知" />


    <Button
        android:id="@+id/btn_notification_show_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示自定义布局通知" />


    <Button
        android:id="@+id/btn_notification_show_no_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示不消失通知" />

    <Button
        android:id="@+id/btn_notification_show_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="展示activity通知" />

</LinearLayout>